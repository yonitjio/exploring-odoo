<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Dialog Template -->
        <record id="cheat_dialog_template_view" model="ir.ui.view">
            <field name="name">cheat.dialog.template</field>
            <field name="model">cheat.basic</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <div>
                        <span>This is a message.</span><br/>
                        <span>And this is a value from the record:<bold><field name="char_field" readonly="1"/></bold></span>
                    </div>
                    <footer>
                        <button name="action_close_and_save" string="Ok" type="object" default_focus="1" class="oe_highlight"/>
                        <button string="Cancel" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
