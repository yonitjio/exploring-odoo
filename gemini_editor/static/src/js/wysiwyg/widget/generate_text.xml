<?xml version="1.0" encoding="UTF-8"?>
<templates id="template"
    xml:space="preserve">
    <t t-name="gemini_editor.GenerateTextDialog">
        <Dialog size="'lg'"
            title="'Text Generator'">
            <div class="o_form_view o_form_nosheet">
                <div class="grid o_inner_group">
                    <div class="d-flex d-sm-contents">
                        <div class="o_cell flex-grow-0 flex-sm-grow-0 text-900 pe-3">
                            <label class="o_form_label"
                                for="prompt_text">Topic</label>
                        </div>
                        <div class="o_cell flex-grow-1 flex-sm-grow-0">
                            <div name="prompt_text_container"
                                class="o_field_widget o_field_char">
                                <textarea id="prompt_text"
                                    t-ref="promptText"
                                    t-model="state.prompt"
                                    class="form-control bg-view px-3 border-0 overflow-auto"
                                    placeholder="Type something"
                                    autocomplete="off"
                                    required="required"/>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex d-sm-contents">
                        <div class="o_cell flex-grow-0 flex-sm-grow-0 text-900 pe-3">
                            <label class="o_form_label"
                                for="prompt_style">Style</label>
                        </div>
                        <div class="o_cell flex-grow-1 flex-sm-grow-0">
                            <div name="prompt_style_container"
                                class="o_field_widget o_field_char">
                                <span>
                                    <input type="radio"
                                        name="prompt_style"
                                        id="style_creative"
                                        value="creative"
                                        t-model="state.style"/>
                                    <label for="style_creative">Creative</label>
                                </span>
                                <br/>
                                <span>
                                    <input type="radio"
                                        name="prompt_style"
                                        id="style_info"
                                        value="info"
                                        t-model="state.style" />
                                    <label for="style_info">Informational</label>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex d-sm-contents">
                        <div class="o_cell flex-grow-0 flex-sm-grow-0 text-900 pe-3">
                            <label class="o_form_label"
                                for="prompt_format">Format</label>
                        </div>
                        <div class="o_cell flex-grow-1 flex-sm-grow-0">
                            <div name="prompt_format_container"
                                class="o_field_widget o_field_char">
                                <span>
                                    <input type="radio"
                                        name="prompt_format"
                                        id="format_article"
                                        value="article"
                                        t-model="state.format"/>
                                    <label for="format_article">Article</label>
                                </span>
                                <br/>
                                <span>
                                    <input type="radio"
                                        name="prompt_format"
                                        id="format_product_description"
                                        value="product_description"
                                        t-model="state.format" />
                                    <label for="format_product_description">Product Description</label>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>

                <div t-if="state.generating"
                    class="d-flex align">
                    <img src="/web/static/img/spin.svg"
                        alt="Generating..."
                        class="me-2"
                        style="filter:invert(1); opacity: 0.5; width: 15px; height: 15px;"/>
                    <p class="m-0 text-muted align-self-center">
                        <em>Generating...</em>
                    </p>
                </div>
            </div>
            <t t-set-slot="footer">
                <button class="btn btn-primary"
                    t-on-click="_confirm">Generate</button>
                <button class="btn btn-secondary"
                    t-on-click="_cancel">Cancel</button>
            </t>
        </Dialog>
    </t>
</templates>